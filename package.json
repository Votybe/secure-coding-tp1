{
  "name": "node-ts-template",
  "version": "1.0.0",
  "description": "Basic template of a node + typescript project",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -fr dist && tsc",
    "watch": "rm -fr dist && tsc -watch",
    "start": "node --async-stack-traces dist/index.js",
    "lint": "eslint --fix src",
    "test": "NODE_ENV=test mocha --recursive dist/specs --exit --async-stack-traces"
  },
  "author": "Thomas VEILLARD",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^15.14.9",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.2.0",
    "mocha": "^10.1.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.10"
  }
}
